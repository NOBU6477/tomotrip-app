# ルートの .replit（最小でOK）
run = "node github-migration-ready/server.js"
modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[interpreter]
language = "nodejs"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TomoTripWebApp"

[[workflows.workflow]]
name = "TomoTripWebApp"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 REPLIT_PORT=5000 node replit-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
packages = ["nodejs"]

[agent]
expertMode = true
integrations = ["twilio_send_message:1.0.0", "javascript_object_storage:1.0.0", "javascript_auth_all_persistance:1.0.0", "github:1.0.0"]

[deployment]
deploymentTarget = "vm"
run = ["node", "replit-server.js"]

[objectStorage]
defaultBucketID = "replit-objstore-ffca8552-6aa5-41a1-a733-65b4ece4aaf4"
